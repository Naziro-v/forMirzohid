<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_task1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Ez mambuni(task1)"
        android:background="@drawable/button_gradient"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/btn_task2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Ez mambuni(task2)"
        android:background="@drawable/button_rounded"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/btn_task3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_circle"
        android:text="Ez mambuni(task3)"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btn_task4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_borders"
        android:text="Ez mambuni(task4)"
        app:backgroundTint="@null" />
    <Button
        android:id="@+id/btn_task5"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_dashed"
        android:text="Ez mambuni(task5)"
        app:backgroundTint="@null" />
    <Button
        android:id="@+id/btn_task6"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_gradient_rotate"
        android:text="Ez mambuni(task6)"
        app:backgroundTint="@null" />

</LinearLayout>